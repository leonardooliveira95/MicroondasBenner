@{
    ViewBag.Title = "Home Page";
}

<script type="text/javascript" src="~/Scripts/jquery.signalR-2.4.0.js"></script>
<script type="text/javascript" src="~/signalr/hubs"></script>
<script type="text/javascript" src="~/Scripts/app/Microondas.js"></script>

<div class="row">
    <div class="col-md-12">
        <h2>Microondas digital</h2>
        <div class="divisor"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-7">

        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Alimento</label>
                <div class="col-md-8">
                    <input type="text" class="form-control" id="input-alimento"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tempo de cozimento</label>
                <div class="col-md-4">
                    <input type="number" class="form-control" id="input-tempo" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Potência</label>
                <div class="col-md-4">
                    <input type="range" class="" id="input-potencia" value="10" min="1" max="10" step="1"/>
                    <span id="span-valor-potencia">10</span>
                </div>
            </div>
            <input type="hidden" id="input-caractere" />
            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <button type="button" class="btn btn-primary" id="botao-iniciar-microondas">Iniciar</button>
                    <button type="button" class="btn btn-primary" id="botao-inicio-rapido">Início rápido</button>
                    <span class="fa fa-spin fa-circle-o-notch" id="loading-aquecendo" style="display:none;"></span>
                </div>
            </div>
        </form>


        <h4>Progresso</h4>
        <div class="divisor"></div>

        <div id="resultado-aquecimento"></div>
    </div>
    <div class="col-md-5">
        <div id="programas-disponiveis">

        </div>
    </div>
</div>